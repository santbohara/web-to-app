{
  "name": "sct-dashboard-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "cross-env NODE_ENV=production electron-builder --win",
    "build:linux": "cross-env NODE_ENV=production electron-builder --linux",
    "build:mac": "cross-env NODE_ENV=production electron-builder --mac"
  },
  "keywords": [
    "sct"
  ],
  "author": "Sct",
  "license": "Sct",
  "description": "Sct Hub",
  "dependencies": {
    "auto-launch": "^5.0.6"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "build": {
    "appId": "com.sct.com.np",
    "productName": "Sct Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{test,tests,__tests__}/*",
      "!**/*.map"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "icon": "icon.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon.png",
      "category": "public.app-category.utilities"
    }
  }
}
